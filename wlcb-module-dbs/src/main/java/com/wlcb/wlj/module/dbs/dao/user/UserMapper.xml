<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wlcb.wlj.module.dbs.dao.user.UserMapper">

    <sql id="Base_Column_List">
        `id`,
        `user`,
        `name`,
        `password`,
        `status`,
        `role`,
        `standby_time`,
        `office_id`,
        `insert_at`
    </sql>

    <select id="selectByUser" resultType="com.wlcb.wlj.module.dbs.entity.user.User">
        select <include refid="Base_Column_List"/> from tbl_user
        where
        user = #{username,jdbcType=VARCHAR}
        and status = 0
    </select>

    <select id="selectAllRole" resultType="java.lang.String">
        select id from dic_menu where status=0
    </select>

    <select id="selectMenuByRole" resultType="java.lang.String">
        select menu_id from tbl_role_menu where role_id=#{role,jdbcType=INTEGER}
    </select>


</mapper>