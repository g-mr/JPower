<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wlcb.wlj.module.dbs.dao.user.UserMapper">

    <sql id="Base_Column_List">
        `id`,
        `user`,
        `name`,
        `password`,
        `status`,
        `role`,
        `standby_time`,
        `office_id`,
        `insert_at`,
        jiedao,
        quxian,
        shequ,
        xiaoqu,
        phone
    </sql>

    <select id="selectByUser" resultType="com.wlcb.wlj.module.dbs.entity.user.User">
        select <include refid="Base_Column_List"/> from tbl_user
        where
        user = #{username,jdbcType=VARCHAR}
        and status = 0
    </select>

    <select id="selectAllRole" resultType="java.lang.String">
        select uuid from dic_menu where status=0
    </select>

    <select id="selectMenuByRole" resultType="java.lang.String">
        select m.uuid from tbl_role_menu r LEFT JOIN dic_menu m on r.menu_id = m.id where r.role_id=#{role,jdbcType=INTEGER}
    </select>


</mapper>