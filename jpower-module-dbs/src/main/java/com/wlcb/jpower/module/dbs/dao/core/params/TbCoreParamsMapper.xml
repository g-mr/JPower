<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wlcb.jpower.module.dbs.dao.core.params.TbCoreParamsMapper">

    <sql id="Base_Column_List">
        `id`,
        code,
        name,
        value,
        note,
        createUser,
        createTime,
        updateUser,
        updateTime,
        status
    </sql>

    <select id="selectByCode" resultType="java.lang.String">
        select value from tb_core_param where code = #{code,jdbcType=VARCHAR}
    </select>

    <select id="selectById" resultType="com.wlcb.jpower.module.dbs.entity.core.params.TbCoreParam">
        select <include refid="Base_Column_List"/> from tb_core_param where id = #{id,jdbcType=VARCHAR}
    </select>

    <select id="listAll" resultType="com.wlcb.jpower.module.dbs.entity.core.params.TbCoreParam">
        select <include refid="Base_Column_List"/> from tb_core_param where status = 1
        <if test="code != null and code!=''">
            and code = #{code,jdbcType=VARCHAR}
        </if>
        <if test="name != null and name!=''">
            and name = #{name,jdbcType=VARCHAR}
        </if>
        <if test="value != null and value!=''">
            and value = #{value,jdbcType=VARCHAR}
        </if>
        order by create_time desc
    </select>

    <delete id="deleteById">
        delete from tb_core_param where id = #{id,jdbcType=VARCHAR}
    </delete>

    <update id="updateByPrimaryKeySelective">
        update tb_core_param
        <set>
            <if test="name != null and name != ''">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="value != null and value != '' ">
                value=#{value,jdbcType=VARCHAR},
            </if>
            <if test="updateUser != null and updateUser != '' ">
                update_user=#{updateUser,jdbcType=VARCHAR},
            </if>
        </set>
        WHERE id = #{id,jdbcType=VARCHAR}
    </update>

    <insert id="insert">
        insert into tb_core_param (
        id,code,name,value,note,createUser,update_user
        ) values (
        #{id,jdbcType=VARCHAR},
        #{code,jdbcType=VARCHAR},
        #{name,jdbcType=VARCHAR},
        #{value,jdbcType=VARCHAR},
        #{note,jdbcType=VARCHAR},
        #{createUser,jdbcType=TIMESTAMP},
        #{updateUser,jdbcType=TIMESTAMP}
        )
    </insert>
</mapper>