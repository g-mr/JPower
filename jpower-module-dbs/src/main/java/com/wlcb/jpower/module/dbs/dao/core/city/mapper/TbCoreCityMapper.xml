<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wlcb.jpower.module.dbs.dao.core.city.mapper.TbCoreCityMapper">


    <resultMap id="treeNodeResultMap" type="com.wlcb.jpower.module.common.node.TreeNode">
        <id column="id" property="id"/>
        <result column="parent_id" property="parentId"/>
        <result column="title" property="title"/>
        <result column="value" property="value"/>
        <result column="key" property="key"/>
        <result column="has_children" property="hasChildren"/>
    </resultMap>

    <select id="lazyTree" resultMap="treeNodeResultMap">
        SELECT
        city.code AS "id",
        city.pcode AS "parent_id",
        city.name AS "title",
        city.code AS "value",
        city.code AS "key",
        ( SELECT CASE WHEN count( 1 ) > 0 THEN 1 ELSE 0 END FROM tb_core_city WHERE pcode = city.code ) AS "has_children"
        FROM
        tb_core_city city
        <where>
            <if test="param1!=null">
                and city.pcode = #{param1}
            </if>
            <if test="param2.code!=null and param2.code!=''">
                and city.code like concat(concat('%', #{param2.code}),'%')
            </if>
            <if test="param2.name!=null and param2.name!=''">
                and city.name like concat(concat('%', #{param2.name}),'%')
            </if>
        </where>
    </select>
</mapper>